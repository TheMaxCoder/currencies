<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:padding="16dp"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/flag_us"
            android:text="USD"
             />

        <LinearLayout
            android:id="@+id/clickFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layoutDirection="ltr"
            android:longClickable="true"
            android:padding="@dimen/margin2x">

            <TextView
                android:id="@+id/currencyFrom"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin1x"
                android:text="€" />

            <TextView
                android:id="@+id/textFromValue"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textDirection="ltr"
                android:textStyle="bold"
                android:text="13.99" />
        </LinearLayout>
    </LinearLayout>


    <!-- divider ****************************************************** -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height=".75dp"
        android:background="?android:attr/listDivider" />

    <!-- bottom main_display ****************************************** -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/flag_eu"
            android:text="EUR"
            />


        <LinearLayout
            android:id="@+id/clickTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/margin2x">

            <TextView
                android:id="@+id/currencyTo"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin1x"
                android:text="€" />

            <TextView
                android:id="@+id/textToValue"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textDirection="ltr"
                android:textStyle="bold"
                android:text="383.99" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>